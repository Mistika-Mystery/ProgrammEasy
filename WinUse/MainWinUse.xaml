<Window x:Class="ProgrammEasy.WinUse.MainWinUse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammEasy.WinUse"
        mc:Ignorable="d"
        Title="Программирование это просто!" Height="500" Width="800" Icon="/Recourse/LogIsoPr.png">
    <Grid>
        <TextBox Name="CodeInputTextBox" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="780" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Margin="10,10,10,0"/>
        <Button Name="RunCodeButton" Content="Run Code" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,320,0,0" Click="RunCodeButton_Click"/>
        <TextBox Name="CodeOutputTextBox" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="780" Margin="10,360,10,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>
