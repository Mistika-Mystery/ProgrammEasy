<Window x:Class="ProgrammEasy.WinUse.MainWinUse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammEasy.WinUse"
        mc:Ignorable="d"
        Title="Программирование это просто!" Height="450" Width="800" Icon="/Recourse/LogIsoPr.png">
    <Grid>

        <Button Content="Открыть меню" HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="Button_Click" x:Name="btn"/>
        <Popup Name="popup" PlacementTarget="{Binding ElementName=btn}" Placement="Bottom">
            <Border BorderBrush="Black" BorderThickness="1" Background="White">
                <StackPanel>
                    <Button Content="назад" x:Name="back" Click="back_Click"/>
                    <Button Content="Пункт меню 2"/>
                    <Button Content="Пункт меню 3"/>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Window>
