<Window x:Class="ProgrammEasy.WinUse.Admin.AdminGlavWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgrammEasy.WinUse.Admin"
        mc:Ignorable="d"
        Title="Программирование это просто!" Height="450" Width="800" Icon="/Recourse/LogIsoPr.png">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA2FAFA"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="767*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Image Source="/Recourse/ProgLogoNew.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Панель" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Comic Sans MS"/>
                <TextBlock Text="Администратора" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Comic Sans MS" FontSize="24"/>
            </StackPanel>
        </StackPanel>

        <TabControl Grid.Row="1" Grid.Column="1" >
            <TabItem Header="Журнал заявок" >
                
         Содержимое вкладки 1 
        
            </TabItem>
            <TabItem Header="Пользователи">
                
         Содержимое вкладки 2 
        
            </TabItem>
            <TabItem Header="Роли Пользователей">
                
         Содержимое вкладки 3 
        
            </TabItem>
            <TabItem Header="Группы Пользователей">
                
         Содержимое вкладки 4 
        
            </TabItem>
            <TabItem Header="Журнал Результатов">

                Содержимое вкладки 5

            </TabItem>



        </TabControl>


    </Grid>
</Window>
