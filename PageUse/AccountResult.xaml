<Page x:Class="ProgrammEasy.PageUse.AccountResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgrammEasy.PageUse"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountResult">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1">
            <Image x:Name="LvlImg" Source="{Binding Path=ImgFoto.ImgLev}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ImgFoto.Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock Text="Login: " FontSize="18"/>
                <TextBlock Text="{Binding Login}" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" >
                <TextBlock Text="ФИ: " FontSize="18"/>
                <TextBlock Text="{Binding LastName}" Margin="0,0,5,0" FontSize="20" />
                <TextBlock Text="{Binding FirstName}" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" >
                <TextBlock Text="Статус: " FontSize="18"/>
                <TextBlock Text="{Binding RoleUser.Name}" FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" >
                <TextBlock Text="Группа: " FontSize="18"/>
                <TextBlock Text="{Binding GroupUser.Name}" FontSize="20"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Style="{StaticResource SpecialButtonStyle}" Content="Редактировать" x:Name="EditBt" Click="EditBt_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Background="{x:Null}" FontSize="16" Cursor="Hand"/>
            <Button Style="{StaticResource SpecialButtonStyle}" Content="Написать Администратору" x:Name="MessBt" Click="EditBt_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Background="{x:Null}" FontSize="16" Grid.Row="2" Cursor="Hand"/>
        </Grid>
    </Grid>
</Page>
